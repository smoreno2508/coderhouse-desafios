<div class="container">
    <div class="row">
        {{!-- Sidebar --}}
        <div class="col-lg-3">
            <section class="section-sidebar">

                {{> sidebar}}

            </section>
        </div>

        {{!-- Products --}}
        <div class="col-lg-9">
            <section class="section-products">
                <div class="container">
                    <div class="row">
                        {{#each productList}}
                        <!-- Single Product -->
                        <div class="col-md-6 col-lg-4 col-xl-3">
                            <div id="product-1" class="single-product">
                                <div class="part-1">
                                    <img src="{{ thumbnail }}" alt="" class="product-image">
                                    <ul>
                                        <li><a href="#" onclick="addProductToCart('{{_id}}')"><i
                                                    class="fas fa-shopping-cart"></i></a></li>
                                        <li><a href="#"><i class="fas fa-heart"></i></a></li>
                                        <li><a href="#"><i class="fas fa-plus"></i></a></li>
                                        <li><a href="/product/{{_id}}"><i class="fas fa-expand"></i></a></li>
                                    </ul>
                                </div>
                                <div class="part-2">
                                    <h3 class="product-title">{{ title }}</h3>
                                    {{!-- <h4 class="product-old-price"></h4> --}}
                                    <h4 class="product-price">${{ price }}</h4>
                                    <br>
                                    <h4 class="product-price">stock: {{ stock }}</h3>

                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </section>


            <nav class="pagination-outer" aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {{#if hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{prevPage}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    {{/if}}


                    {{#each pages}}
                    <li class="page-item {{#if (eq ../page this)}}active{{/if}}">
                        <a class="page-link"
                            href="?{{#if ../currentQuery.category}}category={{../currentQuery.category}}&{{/if}}{{#if ../sort}}sort={{../sort}}&{{/if}}page={{this}}">{{this}}</a>
                    </li>
                    {{/each}}


                    {{#if hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{nextPage}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>

    </div>

</div>

<button class="chat-button" onclick="toggleChat()"><span class="material-symbols-rounded">mode_comment</span></button>

<div class="chat-container">
    <!-- Encabezado -->
    <div class="chat-header">
        Live Chat
        <span class="close-chat" onclick="toggleChat()"><span class="material-symbols-outlined">close</span></span>
    </div>
    <!-- Formulario de entrada de correo electrÃ³nico -->
    <div class="email-entry p-3">
        <input type="email" id="email" placeholder="Introduce tu correo" class="form-control mb-2">
        <button id="startChat" class="btn btn-primary w-100">Iniciar Chat</button>
    </div>
    <!-- Contenedor de mensajes (oculto por defecto) -->
    <div class="messages p-3" style="display:none;">
        <ul id="messageList"></ul>
    </div>
    <!-- Formulario de mensaje (oculto por defecto) -->
    <div class="message-form p-3" style="display:none;">
        <input type="text" id="messageInput" placeholder="Escribe tu mensaje" class="form-control mb-2">
        <button id="sendMessage" class="btn btn-primary w-100">Enviar</button>
    </div>
</div>