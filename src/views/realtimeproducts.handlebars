<section class="section-products">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8 col-lg-6">
                <div class="header">
                    <h3>Realtime Product Display</h3>
                    <h2>Live Updated Products</h2>
                    <!-- Botón para abrir el modal -->
                    <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal"
                        data-bs-target="#productModal">
                        Add Product
                    </button>
                </div>
            </div>
        </div>
        <div class="row" id="realtime-products">

        </div>
    </div>
</section>


<!-- Modal add Products -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Add New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="productForm">
                    <div class="mb-3">
                        <input class="form-control" type="text" name="title" placeholder="Title" required>
                    </div>
                    <div class="mb-3">
                        <input type="checkbox" name="status"> Active
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="text" name="category" placeholder="Category" required>
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="text" name="description" placeholder="Description" required>
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="number" name="price" placeholder="Price" required>
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="url" name="thumbnail" placeholder="Thumbnail URL" required>
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="text" name="code" placeholder="Code" required>
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="number" name="stock" placeholder="Stock" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add Product</button>
                    </div>
                    <br>
                    <div id="error-message" class="alert alert-danger" style="display: none;"></div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Modal add Products -->

<!-- Modal delete Products -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro que deseas eliminar este producto?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal delete Products -->

{{!-- chat --}}

<button class="chat-button" onclick="toggleChat()"><span class="material-symbols-rounded">mode_comment</span></button>

<div class="chat-container">
    <!-- Encabezado -->
    <div class="chat-header">
        Live Chat
        <span class="close-chat" onclick="toggleChat()"><span class="material-symbols-outlined">close</span></span>
    </div>
    <!-- Formulario de entrada de correo electrónico -->
    <div class="email-entry p-3">
        <input type="email" id="email" placeholder="Introduce tu correo" class="form-control mb-2">
        <button id="startChat" class="btn btn-primary w-100">Iniciar Chat</button>
    </div>
    <!-- Contenedor de mensajes (oculto por defecto) -->
    <div class="messages p-3" style="display:none;">
        <ul id="messageList"></ul>
    </div>
    <!-- Formulario de mensaje (oculto por defecto) -->
    <div class="message-form p-3" style="display:none;">
        <input type="text" id="messageInput" placeholder="Escribe tu mensaje" class="form-control mb-2">
        <button id="sendMessage" class="btn btn-primary w-100">Enviar</button>
    </div>
</div>

